<%- include('partials/header'); -%>
    <h1>Home</h1>
    <p>
        <%= homeStartingContent %>
    </p>
    <% posts.forEach(function(post){ %>
        <div>
            <h1><%= post.title %></h1>
            <p><%= post.content.substr(0, 100) + "..."%></p>
            <a href="/posts/<%= post._id %>" >Read more</a>
        </div>
    <% }) %>

<%- include('partials/footer'); -%>